extends ../layout
block content
    div(class='container')
        ul(class='nav nav-pills',role="tablist")
            li(class="not-selected", role="presentation")
                a(href="/friend/discover") Discover Friends
            // scienceiscool edited this section,
            // took the class="active" that was originally above
            // the "Discover Friends" list item and put it here in
            // the following line - where it belongs.
            // This fixed a bug, where no matter which tab was pressed,
            // only the "Discover Friends" tab would look selected.
            li(role="presentation", class="active")
                a(href="/friend/find") Find Friends
            li(class="not-selected", role="presentation")
                a(href="/friend/list") Friend List
                
    div(class="container")
        div(class="row")
            h1(class="col-md-4") Search for people
            div(class="col-md-4 pull-right")
                form(class="form-inline",id="searchForm")
                    div(class="form-group")
                        input(type="text",class="form-control",id="searchName",placeholder="Search name")
                        button(type="submit",class="btn btn-default")
                            span(class="glyphicon glyphicon-search")
        div(class="row findfriends")
block footer
  script(src="/js/friend.js")
